<button
  type="button"
  data-bs-toggle="modal"
  data-bs-target="#newOrderModal"
  class="btn btn-success btn-rounded waves-effect waves-light mb-2 me-2 addOrder-modal"
  ><i class="mdi mdi-plus me-1"></i> Add Endpoint</button
>

<div
  class="modal fade"
  id="newOrderModal"
  tabindex="-1"
  aria-labelledby="newOrderModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="" id="">Add Endpoint</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form
          autocomplete="off"
          class="needs-validation createorder-form"
          id="createorder-form"
          novalidate
        >
          <div class="row">
            <div class="col-lg-12">
              <input type="hidden" class="form-control" id="orderid-input" />
              <div class="mb-3">
                <label for="customername-field" class="form-label"
                  >EndpointHostname</label
                >
                <input
                  type="text"
                  id="customername-field"
                  class="form-control"
                  placeholder="Enter name Endpoint"
                  required
                />
                <div class="invalid-feedback">
                  Please enter a EndpointHostname
                </div>
              </div>
              <div class="mb-3">
                <label for="customername-field" class="form-label"
                  >Endpoint IP</label
                >
                <input
                  type="text"
                  id="customername-field"
                  class="form-control"
                  placeholder="Enter Endpoint IP"
                  required
                />
                <div class="invalid-feedback">Please enter a Endpoint IP</div>
              </div>
              <div class="mb-3">
                <label for="customername-field" class="form-label"
                  >Regional | Endpoint Grup
                </label>
                <input
                  type="text"
                  id="customername-field"
                  class="form-control"
                  placeholder="Enter Regional | Endpoint Grup	"
                  required
                />
                <div class="invalid-feedback">
                  Please enter a Regional | Endpoint Grup
                </div>
              </div>
              <div class="mb-3">
                <label for="customername-field" class="form-label"
                  >OS Type
                </label>
                <input
                  type="text"
                  id="customername-field"
                  class="form-control"
                  placeholder="Enter OS Type		"
                  required
                />
                <div class="invalid-feedback">Please enter a OS Type</div>
              </div>
              <div class="mb-3">
                <label for="customername-field" class="form-label"
                  >OS Name
                </label>
                <input
                  type="text"
                  id="customername-field"
                  class="form-control"
                  placeholder="Enter OS Name		"
                  required
                />
                <div class="invalid-feedback">Please enter a OS Name</div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="mb-3">
                <label for="paystatus-input" class="form-label"
                  >Protection manager</label
                >
                <select class="form-select" id="paystatus-input" required>
                  <option value="Chargeback" selected
                    >Endpoint Protection</option
                  >
                  <option value="Paid">Server Protection</option>
                </select>
                <div class="invalid-feedback">
                  Please select a payment status.
                </div>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="text-end">
                <button
                  type="button"
                  class="btn btn-outline-secondary"
                  data-bs-dismiss="modal">Cancel</button
                >
                <button
                  type="submit"
                  id="addNewOrder-btn"
                  class="btn btn-success">Create</button
                >
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
