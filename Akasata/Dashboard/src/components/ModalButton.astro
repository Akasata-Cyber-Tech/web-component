---
interface iButton{
    buttonColor: String;
}
// Props: These are customizable attributes for the button
const { textColor="white", buttonColor="none",buttonClass = "btn btn-primary btn-rounded waves-effect waves-light mb-2 me-2 addOrder-modal", buttonText = "Add Endpoint", modalTarget = "#newOrderModal" } = Astro.props;
---

<button
  type="button"
  data-bs-toggle="modal"
  data-bs-target={modalTarget}
  class={buttonClass}
>
  <i class="mdi mdi-plus me-1"></i>{buttonText} 
</button>
